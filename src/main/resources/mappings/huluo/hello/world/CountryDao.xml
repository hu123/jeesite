<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thinkgem.jeesite.modules.org.huluo.hello.dao.world.CountryDao">

    <resultMap id="countryMap" type="com.thinkgem.jeesite.modules.org.huluo.hello.entity.world.Country">
        <id column="country_id" property="id"/>
        <result column="country_name" property="countryName"/>
        <collection property="cityList" column="country_city_id"
                    javaType="com.thinkgem.jeesite.modules.org.huluo.hello.entity.world.City">
            <id column="city_id" property="id"/>
            <result property="cityName" column="city_name"/>
        </collection>

    </resultMap>


    <sql id="countryColumns">
		country_id ,
		country_name
	</sql>

    <sql id="countryJoins">
    </sql>

    <select id="get" resultMap="countryMap">
        SELECT
        *
        FROM country
        <include refid="countryJoins"/>
        WHERE country_id = #{id}
    </select>

    <select id="findList" resultMap="countryMap" >
        SELECT
        *
        FROM country a
        <!--
        <include refid="countryJoins"/>
        -->


        <choose>
            <when test="page !=null and page.orderBy != null and page.orderBy != ''">
                ORDER BY ${page.orderBy}
            </when>
            <otherwise>
            </otherwise>
        </choose>
    </select>

    <select id="findAllList" resultType="Country">
        SELECT
        <include refid="countryColumns"/>
        FROM country a
        <include refid="countryJoins"/>
        <where>

        </where>
        <choose>
            <when test="page !=null and page.orderBy != null and page.orderBy != ''">
                ORDER BY ${page.orderBy}
            </when>
            <otherwise>
            </otherwise>
        </choose>
    </select>

    <insert id="insert">
		INSERT INTO country(
			country_id,
			country_name
		) VALUES (
			#{id},
			#{countryName}
		)
	</insert>

    <update id="update">
		UPDATE country SET country_name = #{countryName} WHERE country_id = #{id}
	</update>

    <update id="delete" parameterType="com.thinkgem.jeesite.modules.org.huluo.hello.entity.world.Country">
		DELETE FROM country
		WHERE country_id = #{id}
	</update>

</mapper>